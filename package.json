{
  "name": "unloved",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "idk",
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "icon": "logo",  
    "appId": "com.unloved.id",
    "productName": "Unloved",
    "files": [
      "main.js",
      "node_modules/**/*",
      "package.json",
      "Home/**/*",      
      "logo.png",
      "Chapters/**/*",
      "Images/**/*",
      "Scripts/**/*",
      "Styles/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "logo.icns" 
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "logo.ico"  
    },
    "linux": {
      "icon": "logo.png"  
    }
  }
}
